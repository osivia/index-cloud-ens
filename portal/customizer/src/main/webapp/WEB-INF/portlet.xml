<?xml version="1.0" encoding="UTF-8" ?>
<portlet-app
    xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
    version="2.0">

    <!-- Plugin -->
    <portlet>
        <portlet-name>demo-plugin</portlet-name>
        <portlet-class>org.osivia.demo.customizer.plugin.DemoPlugin</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
        </supports>

        <portlet-info>
            <title>Plugin</title>
        </portlet-info>
    </portlet>
    
    
    <!-- Regions customizer -->
    <portlet>
        <portlet-name>demo-regions-customizer</portlet-name>
        <portlet-class>org.osivia.demo.customizer.regions.RegionsCustomizer</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
        </supports>

        <portlet-info>
            <title>Regions customizer</title>
        </portlet-info>
    </portlet>
    
    
    <!-- Attributes bundle customizer -->
    <portlet>
        <portlet-name>demo-attributes-customizer</portlet-name>
        <portlet-class>org.osivia.demo.customizer.attributes.AttributesCustomizer</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
        </supports>

        <portlet-info>
            <title>Attributes customizer</title>
        </portlet-info>
    </portlet>
    
    
    <!-- Internationalization customizer -->
    <portlet>
        <portlet-name>demo-internationalization-customizer</portlet-name>
        <portlet-class>org.osivia.demo.customizer.internationalization.InternationalizationCustomizer</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
        </supports>

        <portlet-info>
            <title>Internationalization customizer</title>
        </portlet-info>
    </portlet>
    
    
    <!-- Feeder customizer -->
    <portlet>
        <portlet-name>demo-feeder-customizer</portlet-name>
        <portlet-class>org.osivia.demo.customizer.feeder.FeederCustomizer</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
        </supports>

        <portlet-info>
            <title>Feeder customizer</title>
        </portlet-info>
    </portlet>

    
    <!-- Project customizer -->
    <portlet>
        <portlet-name>demo-project-customizer</portlet-name>
        <portlet-class>org.osivia.demo.customizer.project.ProjectCustomizer</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
        </supports>

        <portlet-info>
            <title>Project customizer</title>
        </portlet-info>
    </portlet>

</portlet-app>
