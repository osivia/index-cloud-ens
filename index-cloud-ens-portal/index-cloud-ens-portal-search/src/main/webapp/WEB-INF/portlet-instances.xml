<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE deployments PUBLIC "-//JBoss Portal//DTD Portlet Instances 2.6//EN" "http://www.jboss.org/portal/dtd/portlet-instances_2_6.dtd">

<deployments>

    <deployment>
        <if-exists>overwrite</if-exists>
        <instance>
            <display-name xml:lang="en">Cloud Ens - Search</display-name>
            <display-name xml:lang="fr">Cloud Ens - Recherche</display-name>
            <instance-id>index-cloud-ens-search-instance</instance-id>
            <portlet-ref>index-cloud-ens-search</portlet-ref>
            <security-constraint>
                <policy-permission>
                    <action-name>view</action-name>
                    <unchecked />
                </policy-permission>
                <policy-permission>
                    <action-name>admin</action-name>
                    <role-name>Administrators</role-name>
                </policy-permission>
            </security-constraint>
        </instance>
    </deployment>


    <deployment>
        <if-exists>overwrite</if-exists>
        <instance>
            <display-name xml:lang="en">Cloud Ens - Search filters</display-name>
            <display-name xml:lang="fr">Cloud Ens - Filtres de recherche</display-name>
            <instance-id>index-cloud-ens-search-filters-instance</instance-id>
            <portlet-ref>index-cloud-ens-search-filters</portlet-ref>
            <security-constraint>
                <policy-permission>
                    <action-name>view</action-name>
                    <unchecked />
                </policy-permission>
            </security-constraint>
        </instance>
    </deployment>


    <deployment>
        <if-exists>overwrite</if-exists>
        <instance>
            <display-name xml:lang="en">Cloud Ens - Search filters location</display-name>
            <display-name xml:lang="fr">Cloud Ens - Emplacement des filtres de recherche</display-name>
            <instance-id>index-cloud-ens-search-filters-location-instance</instance-id>
            <portlet-ref>index-cloud-ens-search-filters-location</portlet-ref>
            <security-constraint>
                <policy-permission>
                    <action-name>view</action-name>
                    <unchecked />
                </policy-permission>
            </security-constraint>
            <preferences>
                <preference>
                    <name>hide</name>
                    <value>true</value>
                </preference>
            </preferences>
        </instance>
    </deployment>


    <deployment>
        <if-exists>overwrite</if-exists>
        <instance>
            <display-name xml:lang="en">Cloud Ens - Saved searches</display-name>
            <display-name xml:lang="fr">Cloud Ens - Recherches enregistrées</display-name>
            <instance-id>index-cloud-ens-saved-searches-instance</instance-id>
            <portlet-ref>index-cloud-ens-saved-searches</portlet-ref>
            <security-constraint>
                <policy-permission>
                    <action-name>view</action-name>
                    <unchecked />
                </policy-permission>
                <policy-permission>
                    <action-name>admin</action-name>
                    <role-name>Administrators</role-name>
                </policy-permission>
            </security-constraint>
        </instance>
    </deployment>


    <deployment>
        <if-exists>overwrite</if-exists>
        <instance>
            <display-name xml:lang="en">Cloud Ens - Searches eraser</display-name>
            <display-name xml:lang="fr">Cloud Ens - Réinitialisation de la recherche</display-name>
            <instance-id>index-cloud-ens-search-eraser-instance</instance-id>
            <portlet-ref>index-cloud-ens-search-eraser</portlet-ref>
            <security-constraint>
                <policy-permission>
                    <action-name>view</action-name>
                    <unchecked />
                </policy-permission>
            </security-constraint>
        </instance>
    </deployment>


    <deployment>
        <if-exists>overwrite</if-exists>
        <instance>
            <display-name xml:lang="en">Cloud Ens - Search filters home settings</display-name>
            <display-name xml:lang="fr">Cloud Ens - Paramétrage des filtres de recherche de l'accueil</display-name>
            <instance-id>index-cloud-ens-search-filters-home-settings-instance</instance-id>
            <portlet-ref>index-cloud-ens-search-filters-home-settings</portlet-ref>
            <security-constraint>
                <policy-permission>
                    <action-name>view</action-name>
                    <unchecked />
                </policy-permission>
            </security-constraint>
            <preferences>
                <preference>
                    <name>hide</name>
                    <value>true</value>
                </preference>
            </preferences>
        </instance>
    </deployment>
    
</deployments>
