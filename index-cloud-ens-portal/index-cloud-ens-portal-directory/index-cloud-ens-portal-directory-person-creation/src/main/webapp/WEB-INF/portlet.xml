<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
    version="2.0">
    

    
    <portlet>
        <portlet-name>cloudens-person-creation-portlet</portlet-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>

        <init-param>
            <name>contextClass</name>
            <value>org.osivia.portal.api.portlet.AnnotationPortletApplicationContext</value>
        </init-param>
        <init-param>
            <name>contextConfigLocation</name>
            <value>fr.index.cloud.ens.directory.person.creation.portlet.configuration.PersonCreationPortletConfiguration</value>
        </init-param>
        
        <expiration-cache>0</expiration-cache>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>

        <portlet-info>
            <title>Person renew portlet</title>
        </portlet-info>
    </portlet>        

    <portlet>
        <portlet-name>cloudens-person-creation-plugin</portlet-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>

        <init-param>
            <name>contextClass</name>
            <value>org.osivia.portal.api.portlet.AnnotationPortletApplicationContext</value>
        </init-param>
        <init-param>
            <name>contextConfigLocation</name>
            <value>fr.index.cloud.ens.directory.person.creation.plugin.configuration.PersonCreationPluginConfiguration</value>
        </init-param>
        
        <expiration-cache>0</expiration-cache>

        <supports>
            <mime-type>text/html</mime-type>
        </supports>

        <portlet-info>
            <title>Person creation portlet</title>
        </portlet-info>
    </portlet>
    
    
    <portlet>
        <portlet-name>cloudens-person-renew-pwd-portlet</portlet-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>

        <init-param>
            <name>contextClass</name>
            <value>org.osivia.portal.api.portlet.AnnotationPortletApplicationContext</value>
        </init-param>
        <init-param>
            <name>contextConfigLocation</name>
            <value>fr.index.cloud.ens.directory.person.renew.portlet.configuration.RenewPasswordPortletCfg</value>
        </init-param>
        
        <expiration-cache>0</expiration-cache>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>

        <portlet-info>
            <title>Person renew portlet</title>
        </portlet-info>
    </portlet>    


    
    <portlet>
        <portlet-name>cloudens-person-deleting-portlet</portlet-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>

        <init-param>
            <name>contextClass</name>
            <value>org.osivia.portal.api.portlet.AnnotationPortletApplicationContext</value>
        </init-param>
        <init-param>
            <name>contextConfigLocation</name>
            <value>fr.index.cloud.ens.directory.person.deleting.portlet.configuration.PersonDeletingConfiguration</value>
        </init-param>
        
        <expiration-cache>0</expiration-cache>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>

        <portlet-info>
            <title>Person deleting portlet</title>
        </portlet-info>
    </portlet>    

    <portlet>
        <portlet-name>cloudens-person-export-portlet</portlet-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>

        <init-param>
            <name>contextClass</name>
            <value>org.osivia.portal.api.portlet.AnnotationPortletApplicationContext</value>
        </init-param>
        <init-param>
            <name>contextConfigLocation</name>
            <value>fr.index.cloud.ens.directory.person.export.portlet.configuration.PersonExportConfiguration</value>
        </init-param>
        
        <expiration-cache>0</expiration-cache>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>

        <portlet-info>
            <title>Person data export portlet</title>
        </portlet-info>
    </portlet>    

</portlet-app>
