<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE deployments PUBLIC "-//JBoss Portal//DTD Portlet Instances 2.6//EN" "http://www.jboss.org/portal/dtd/portlet-instances_2_6.dtd">

<deployments>

    <deployment>
        <if-exists>overwrite</if-exists>
        <instance>
            <display-name xml:lang="en">Cloud-ens - Dashboard</display-name>
            <display-name xml:lang="fr">Cloud-ens - Dashboard</display-name>
            <instance-id>index-cloud-portal-ens-ws-dashboardInstance</instance-id>
            <portlet-ref>index-cloud-portal-ens-ws-dashboardPortlet</portlet-ref>
            <security-constraint>
                <policy-permission>
                    <action-name>admin</action-name>
                    <role-name>Administrators</role-name>
                </policy-permission>
                <policy-permission>
                    <action-name>view</action-name>
                    <unchecked />
                </policy-permission>
            </security-constraint>
        </instance>
    </deployment>


    <deployment>
        <if-exists>overwrite</if-exists>
        <instance>
            <display-name xml:lang="en">Cloud-ens - Applications</display-name>
            <display-name xml:lang="fr">Cloud-ens - Applications</display-name>
            <instance-id>index-cloud-portal-ens-application-managementInstance</instance-id>
            <portlet-ref>index-cloud-portal-ens-application-managementPortlet</portlet-ref>
            <security-constraint>
                <policy-permission>
                    <action-name>admin</action-name>
                    <role-name>Administrators</role-name>
                </policy-permission>
                <policy-permission>
                    <action-name>view</action-name>
                    <unchecked />
                </policy-permission>
            </security-constraint>
        </instance>
    </deployment>
    
    
    <deployment>
        <if-exists>overwrite</if-exists>
        <instance>
            <display-name xml:lang="en">Cloud-ens - Application detail</display-name>
            <display-name xml:lang="fr">Cloud-ens - DÃ©tail application</display-name>
            <instance-id>index-cloud-portal-ens-application-cardInstance</instance-id>
            <portlet-ref>index-cloud-portal-ens-application-cardPortlet</portlet-ref>
            <security-constraint>
                <policy-permission>
                    <action-name>admin</action-name>
                    <role-name>Administrators</role-name>
                </policy-permission>
                <policy-permission>
                    <action-name>view</action-name>
                    <unchecked />
                </policy-permission>
            </security-constraint>
            <preferences>
                <preference>
                    <name>hide</name>
                    <value>true</value>
                </preference>
            </preferences>            
        </instance>
    </deployment>
    
    
    <deployment>
        <if-exists>overwrite</if-exists>
        <instance>
            <display-name xml:lang="en">Cloud-ens - Conversion management</display-name>
            <display-name xml:lang="fr">Cloud-ens - Administration conversion</display-name>
            <instance-id>index-cloud-portal-ens-conversion-adminInstance</instance-id>
            <portlet-ref>index-cloud-portal-ens-conversion-adminPortlet</portlet-ref>
            <security-constraint>
                <policy-permission>
                    <action-name>admin</action-name>
                    <role-name>Administrators</role-name>
                </policy-permission>
                <policy-permission>
                    <action-name>view</action-name>
                    <unchecked />
                </policy-permission>
            </security-constraint>
        
        </instance>
    </deployment>

</deployments>
