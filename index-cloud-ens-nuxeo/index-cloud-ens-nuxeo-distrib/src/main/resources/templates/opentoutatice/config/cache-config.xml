<?xml version="1.0"?>

<component name="org.osivia.drive.caches">

	<extension point="caches" target="org.nuxeo.ecm.core.cache.CacheService">
	
	    <cache name="driveSyncRoot">
	      <option name="maxSize">10000</option>
	      <option name="concurrencyLevel">4</option>
	      <ttl>1</ttl>
	    </cache>
	
	    <cache name="driveCollectionSyncRootMember">
	      <option name="maxSize">10000</option>
	      <option name="concurrencyLevel">4</option>
	      <ttl>1</ttl>
	    </cache>
	
	    <cache name="driveDescendantsScroll">
	      <ttl>20</ttl><!-- minutes -->
	      <option name="maxSize">100</option>
	      <option name="concurrencyLevel">500</option>
	    </cache>
	
	 </extension>

</component>
  